= simple_form_for payment do |f|
  = f.association :student, collection: students.decorate, label_method: :full_name, prompt: t('shared.choose')
  = f.input :amount
  = f.input :completion_month, collection: Date::MONTHNAMES.compact.each_with_index.collect{|m, i| [m, i+1]}, include_blank: false
  = f.input :completion_date, as: :date, start_year: Date.today.year - 100, end_year: Date.today.year
  = link_to t('shared.back'), payments_path, class: 'btn btn-default'
  = f.button :submit
